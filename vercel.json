{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1", "hkg1"],
  "functions": {
    "app/api/reports/upload/**": {
      "maxDuration": 300
    },
    "app/api/reports/analyze/**": {
      "maxDuration": 300
    },
    "app/api/comparison/**": {
      "maxDuration": 300
    },
    "app/api/custom-questions/**": {
      "maxDuration": 180
    },
    "app/api/**": {
      "maxDuration": 60
    }
  },
  "env": {
    "NEXT_PUBLIC_APP_NAME": "Private Fund Analysis Platform",
    "NEXT_PUBLIC_APP_VERSION": "1.0.0"
  }
}
